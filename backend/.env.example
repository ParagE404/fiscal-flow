# Database
DATABASE_URL="postgresql://username:password@localhost:5432/finvista"

# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL=http://localhost:5173

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=FiscalFlow

# Email Verification (set to false to disable email verification)
REQUIRE_EMAIL_VERIFICATION=false

# ===== AUTO-SYNC INTEGRATION CONFIGURATION =====

# Sync Feature Configuration
SYNC_ENABLED=true
SYNC_JOB_CONCURRENCY=5
SYNC_CACHE_TTL=300000
SYNC_LOG_LEVEL=info

# Credential Encryption (REQUIRED - Generate with: openssl rand -hex 32)
CREDENTIAL_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Job Scheduler Configuration
JOB_SCHEDULER_TIMEZONE=Asia/Kolkata
ENABLE_BACKGROUND_JOBS=true

# External API Configuration
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
NSE_API_KEY=your-nse-api-key-if-available
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Rate Limiting
SYNC_RATE_LIMIT_WINDOW=900000
SYNC_RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Metrics
ENABLE_SYNC_METRICS=true
METRICS_PORT=9090

# Redis Configuration (Optional - for advanced job queuing)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your-webhook-secret-for-sync-events

# Data Source Configuration
AMFI_NAV_URL=https://www.amfiindia.com/spages/NAVAll.txt
EPFO_PORTAL_URL=https://passbook.epfindia.gov.in
YAHOO_FINANCE_BASE_URL=https://yahoo-finance15.p.rapidapi.com
NSE_API_BASE_URL=https://www.nseindia.com/api
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# Cache Configuration
STOCK_PRICE_CACHE_TTL=300000
NAV_DATA_CACHE_TTL=86400000
EPF_DATA_CACHE_TTL=2592000000

# Sync Schedule Configuration (Cron expressions)
MF_SYNC_SCHEDULE=0 18 * * *
EPF_SYNC_SCHEDULE=0 2 1 * *
STOCK_SYNC_SCHEDULE=0 * * * *

# Error Handling Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_BACKOFF_FACTOR=2

# Security Configuration
SYNC_API_RATE_LIMIT=10
SYNC_CONFIG_RATE_LIMIT=20
SYNC_STATUS_RATE_LIMIT=100